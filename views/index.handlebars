<div class="center-align">
  <h1>Groovy Chuck's Burger Bar and Roller Rink</h1>
</div>
<div class="row">
  <div class="col s4">
    <div class="left-align">
      <img src="https://cdn.pixabay.com/photo/2015/09/22/19/53/retro-952363_1280.png" alt="rollerskates">
    </div>
  </div>
  <div class="col s4">
    <div class="center-align">
      <img src="http://www.freepngimg.com/download/burger/6-2-burger-png-image.png" alt="bacon cheeseburger">
    </div>
  </div>
  <div class = "col s4">
    <div class = "right-align">
      <img src="https://cdn.pixabay.com/photo/2015/09/22/19/53/retro-952363_1280.png" alt="rollerskates" class="img-hor">
    </div>
  </div>
</div>
<div class="row">
  <div class="col s4">
    <div class="left-align">
      <h4>Burgers Not Devoured!</h4>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

             <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour?</button>
              </form>
            </li>
            <br>
          {{/unless}}
        {{/each}}
      </ul>
    </div> 
  </div>
  <div class="col s4">
    <h4>Add a Burger</h4>
    <form class="create-update-form" action="/" method="POST">

     <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

     <div class="form-group">
        <label for="devoured"></label>
     </div>

     <button type="submit">Add Burger</button>
    </form>
  </div>
  <div class="col s4">
    <div class="right-align">
      <h4>Burgers Eaten!</h4>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

             <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">EAT THIS BURGER AGAIN!</button>
              </form>
            </li>
            <br>
          {{/if}}
        {{/each}} 
      </ul>
    </div>
  </div>
</div>
